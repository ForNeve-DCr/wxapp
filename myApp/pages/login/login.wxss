.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.inputView {
  background-color: white;
  opacity: 0.5;
  height: 30px;
  border-radius: 5px;
  margin-top: 10px;
  display:flex;
  justify-content:center;
  align-items:center;
  margin-left: auto;
  margin-right: auto;
  width: 250px;
}

.loginLab {
  margin: 15px 15px 15px 15px;
  font-size: 30px;
  width: 30%;
}

.inputText {
  flex: block;
  float: right;
  height: 30px;
  width: 70%;
}

.forgetPass {
  font-size: smaller;
  margin-top: 10px;
  text-decoration: underline;
  color: white;
}

.regiest {
  float: right;
  text-decoration: underline;
}

.login {
  background-color: #FF6803;
  border: 0px transparent;
  width: 250px;
  margin-top: 5px;
  font-size: small;
  color: white;
}